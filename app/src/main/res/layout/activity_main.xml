<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:conhint="in.good_work.userlist.MainActivity">


    <EditText
        android:id="@+id/et_main_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Id user" />

    <EditText
        android:id="@+id/et_main_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_main_id"
        android:hint="Name user" />

    <EditText
        android:id="@+id/et_main_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_main_name"
        android:hint="Surname user" />

    <EditText
        android:id="@+id/et_main_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_main_surname"
        android:hint="Phone user" />

    <EditText
        android:id="@+id/et_main_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_main_phone"
        android:hint="Email user" />

    <EditText
        android:id="@+id/et_main_urlphoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_main_mail"
        android:hint="Photo user" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_main_send"
        android:hint="Send"
        />
</RelativeLayout>
